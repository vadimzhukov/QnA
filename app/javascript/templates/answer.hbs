<div class="article card mt-3" id="answer-{{answer.id}}">
  <div class="card-body">
    <div class="fs-4 mt-3">
      {{answer.body}}

      <div class="files mt-3">
        {{#if answer.files}}
          {{#each answer.files}}
            <span class="d-inline-block text-truncate" style="max-width: 150px;">
              <a href="{{this.url}}">{{this.name}}</a>
            </span>
          {{/each}}
        {{/if}}
      </div>
    </div>

    {{#if answer.links}}
      <h6>Links:</h6>
      {{#each answer.links}}
        <p class="mt-3">
          <a href="{{this.url}}" target="_blank">{{this.name}}</a>
        </p>
      {{/each}}
    {{/if}}      

    {{#if userSignedIn }}
      <div class="votes"> 
        Rating of answer: <span id="votes-count-{{answer.id}}" class="px-2">{{answer.votes.votes_sum}}</span>

        <a class="like-votable btn btn-link px-2" data-votable-id="{{answer.id}}" data-type="json" data-remote="true"
          rel="nofollow" data-method="patch" href="{{answer.votes.like_url}}">
          <i class="bi bi-hand-thumbs-up"></i>
        </a>
        
        <a class="reset-like-votable btn btn-link px-2 hidden" data-votable-id="{{answer.id}}" data-type="json" data-remote="true"
          rel="nofollow" data-method="patch" href="{{answer.votes.reset_url}}">
          <i class="bi bi-hand-thumbs-up-fill"></i>
        </a>

        <a class="dislike-votable btn btn-link px-2" data-votable-id="{{answer.id}}" data-type="json"
          data-remote="true" rel="nofollow" data-method="patch" href="{{answer.votes.dislike_url}}">
          <i class="bi bi-hand-thumbs-down"></i>
        </a>

        <a class="reset-dislike-votable btn btn-link px-2 hidden" data-votable-id="{{answer.id}}" data-type="json"
          data-remote="true" rel="nofollow" data-method="patch" href="{{answer.votes.reset_url}}">
          <i class="bi bi-hand-thumbs-down-fill"></i>
        </a>
      </div>
      {{/if}}
  </div> 
</div>