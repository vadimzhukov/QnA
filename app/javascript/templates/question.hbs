<div class="card mt-3">
  <div class="card-body" id="question-{{question.id}}">

    <div class="current-content">
      <h2>
        <a href="{{question.url}}">{{question.title}}</a>
      </h2>
      <p></p>
      <h3>{{question.body}}</h3>

      {{#if question.links}}
      <h6>Links:</h6>
      {{#each question.links}}
      <p class="mt-3">
        <a href="{{this.url}}" target="_blank">{{this.name}}</a>
      </p>
      {{/each}}
      {{/if}}

      {{#if question.files}}
      <h6>Files:</h6>
      {{#each question.files}}
      <span class="d-inline-block text-truncate" style="max-width: 150px;">
        <a href="{{this.url}}">{{this.name}}</a>
      </span>
      {{/each}}
      {{/if}}

      {{#if question.reward}}
      <h6>Reward of question:</h6>
      <p class="mt-3">
      <p>{{question.reward.name}}</p>
      <p><img src="{{question.reward.image_url}}" height="100px" width="auto" /></p>
      </p>
      {{/if}}

      {{#if userSignedIn }}
        <div class="votes"> 
          Rating: <span id="votes-count-{{question.id}}" class="px-2">{{question.votes.votes_sum}}</span>

          <a class="like-votable btn btn-link px-2" data-votable-id="{{question.id}}" data-type="json" data-remote="true"
            rel="nofollow" data-method="patch" href="{{question.votes.like_url}}">
            <i class="bi bi-hand-thumbs-up"></i>
          </a>
          
          <a class="reset-like-votable btn btn-link px-2 hidden" data-votable-id="{{question.id}}" data-type="json" data-remote="true"
            rel="nofollow" data-method="patch" href="{{question.votes.reset_url}}">
            <i class="bi bi-hand-thumbs-up-fill"></i>
          </a>

          <a class="dislike-votable btn btn-link px-2" data-votable-id="{{question.id}}" data-type="json"
            data-remote="true" rel="nofollow" data-method="patch" href="{{question.votes.dislike_url}}">
            <i class="bi bi-hand-thumbs-down"></i>
          </a>

          <a class="reset-dislike-votable btn btn-link px-2 hidden" data-votable-id="{{question.id}}" data-type="json"
            data-remote="true" rel="nofollow" data-method="patch" href="{{question.votes.reset_url}}">
            <i class="bi bi-hand-thumbs-down-fill"></i>
          </a>
        </div>
      {{/if}}

    </div>
  </div>